{
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.cargo.features": "all",
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true
    },
    "[toml]": {
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.formatOnSave": true
    },
    "files.exclude": {
        "**/target": true
    },
    "search.exclude": {
        "**/target": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.build": true,
        "**/.git": true
    }
}